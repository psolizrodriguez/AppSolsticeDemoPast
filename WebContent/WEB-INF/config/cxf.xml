<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:jaxws="http://cxf.apache.org/jaxws"
      xmlns:jaxrs="http://cxf.apache.org/jaxrs"
      xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans.xsd
							http://cxf.apache.org/jaxws
 							http://cxf.apache.org/schemas/jaxws.xsd
 							http://cxf.apache.org/jaxrs
 							http://cxf.apache.org/schemas/jaxrs.xsd">
  <import resource="classpath:META-INF/cxf/cxf.xml" />
  <import resource="classpath:META-INF/cxf/cxf-servlet.xml" />
  	
  <bean id="jacksonProvider" class="org.codehaus.jackson.jaxrs.JacksonJaxbJsonProvider" />
      	
  <jaxrs:server name="SolsticeService" address="/">
		<jaxrs:serviceBeans>
			<ref bean="contactServiceRest" />
			<ref bean="searchServiceRest" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<ref bean="jacksonProvider" />
		</jaxrs:providers> 

		<!-- <jaxrs:schemaLocations>
			<jaxrs:schemaLocation>com.solstice.contact.web.representations.ContactRepresentation</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>com.solstice.contact.web.requests.ContactRequest</jaxrs:schemaLocation>
		</jaxrs:schemaLocations> -->

	</jaxrs:server>
  	<bean id="contactServiceRest" class="com.solstice.contact.web.resource.impl.ContactResourceImpl" />
  	<bean id="searchServiceRest" class="com.solstice.contact.web.resource.impl.SearchResourceImpl" />
  	
  
</beans>